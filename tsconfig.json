{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ESNext",
      "lib": ["ESNext"],
      "rootDir": "./src",
      "outDir": "./dist",
      "strict": true,
      "allowJs": false,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "noEmit": false,
      "declaration": false,
      "declarationMap": false,
      "sourceMap": true,
      "removeComments": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  